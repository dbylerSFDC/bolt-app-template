{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2021"],
    "baseUrl": "src",
    "paths": {
      "$components/*": ["views/components/components.ts"],
      "$modals/*": ["views/modals"],
      "$messages/*": ["views/messages"],
      "$home-tab/*": ["views/home-tab"],
      "$emojis/*": ["utilities/emojis.ts"],
      "$constants/*": ["utilities/constants.ts"]
    }
  },
  "include": ["src/**/*"]
}
