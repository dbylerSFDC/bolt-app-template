{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2021"],
    // Customize or add to these paths as needed
    "baseUrl": "src",
    "paths": {
      "$actions": ["actions"],
      "$actions/*": ["actions/*"],

      "$components": ["views/components"],
      "$components/*": ["views/components/*"],

      "$modals": ["views/modals"],
      "$modals/*": ["views/modals/*"],

      "$messages": ["views/messages"],
      "$messages/*": ["views/messages/*"],

      "$home": ["views/home"],
      "$home/*": ["views/home/*"],

      "$emojis": ["utilities/emojis.ts"],
      "$constants": ["utilities/constants.ts"]
    }
  },
  "include": ["src/**/*"]
}
